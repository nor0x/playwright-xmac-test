<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlaywrightTest_XFMac.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="PlaywrightSharp on Xamarin.Mac" FontSize="Title" Padding="30,10,30,10"/>
        <Grid ColumnDefinitions="*, 200">
            <Entry x:Name="urlEntry" Placeholder="https://www.bing.com" />
            <Button x:Name="goButton" Clicked="goButton_Clicked" Grid.Column="1" Text="Go!" />
        </Grid>
        <Image x:Name="browserImage" WidthRequest="500" HeightRequest="500" />
    </StackLayout>

</ContentPage>
